<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.acn.project1.project1.controller.training1">
    <Page id="page" title="{i18n>title}">
        <content>
        <Label text="Name:" id="label0" width="20%" textAlign="Right"/>
        <Input xmlns="sap.m" id="txtName" width="70%"/>

        <Label text="Street/No.:" width="20%" id="label1" textAlign="Right"/>
        <Input xmlns="sap.m" id="txtStreet" width="50%"/>
        <Input xmlns="sap.m" id="txtNo" width="20%"/>

        <Label id="label2" text="ZIP Code/City:" width="20%" textAlign="Right"/>
        <Input xmlns="sap.m" id="txtZip" width="20%"/>
        <Input xmlns="sap.m" id="txtCity" width="50%"/>

        <Label text="Country:" width="20%" id="label3" textAlign="Right"/>
        <ComboBox xmlns="sap.m" id="ddCountry">
            <items>
                <core:Item xmlns:core="sap.ui.core" key="item-1-key" text="England" id="countryEngland"/>
                <core:Item xmlns:core="sap.ui.core" key="item-2-key" text="Germany" id="countryGermany"/>
                <core:Item xmlns:core="sap.ui.core" key="item-3-key" text="USA" id="countryUSA"/>
                <core:Item xmlns:core="sap.ui.core" key="item-4-key" text="Philippines" id="countryPhilippines"/>
                </items>
        </ComboBox>
        <Toolbar width="100%" id="Toolbar">
        <ToolbarSpacer id="tbspacer"/>
            <content>
                <Button xmlns="sap.m" text="Save" id="btnSave" type="Accept"/>
                <Button xmlns="sap.m" text="Clear" id="btnClear" type="Reject" press="onClickClear"/>
            </content>
        </Toolbar>
    </content>
    </Page>
</mvc:View>